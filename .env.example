# VacationManager Environment Variables

# APP
VM_APP_NAME=VacationManager
VM_APP_VERSION=5.5.0
VM_DEBUG=false

# DATABASE
VM_DATABASE_URL=sqlite:///./vacation_manager.db

# SECURITY
VM_SECRET_KEY=change-me-in-production-use-secrets-manager
VM_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# WEB SERVER
VM_HOST=127.0.0.1
VM_PORT=8000
VM_RELOAD=false

# STORAGE
VM_STORAGE_DIR=./storage
VM_TEMPLATES_DIR=./templates

# LOGGING
VM_LOG_LEVEL=INFO
VM_LOG_FORMAT=console

# BACKUP
VM_BACKUP_ENABLED=true
VM_BACKUP_RETENTION_DAYS=30

# NOTIFICATIONS
VM_NOTIFICATION_CONTRACT_EXPIRY_DAYS=30
